<Window x:Class="pdf_chat_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:pdf_chat_app.ViewModels"
        xmlns:models="clr-namespace:pdf_chat_app.Models"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Document Chat" Height="560" Width="980"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F9">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Bubble template -->
        <DataTemplate DataType="{x:Type models:ChatMessage}">
            <Border x:Name="Bubble"
                    CornerRadius="14"
                    Padding="12"
                    Margin="0,0,0,10"
                    MaxWidth="640">
                <StackPanel>
                    <TextBlock x:Name="RoleText"
                               FontSize="11"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Text}"
                               TextWrapping="Wrap"
                               FontSize="14"
                               Margin="0,6,0,0"/>
                </StackPanel>
            </Border>

            <DataTemplate.Triggers>
                <!-- Assistant -->
                <DataTrigger Binding="{Binding Role}" Value="{x:Static models:ChatRole.Assistant}">
                    <Setter TargetName="Bubble" Property="Background" Value="#F0F5FF"/>
                    <Setter TargetName="RoleText" Property="Text" Value="Assistant"/>
                    <Setter TargetName="RoleText" Property="Foreground" Value="#2D6CDF"/>
                    <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Left"/>
                    <Setter TargetName="Bubble" Property="Margin" Value="0,0,60,10"/>
                    <Setter TargetName="Bubble" Property="BorderThickness" Value="0"/>
                </DataTrigger>

                <!-- User -->
                <DataTrigger Binding="{Binding Role}" Value="{x:Static models:ChatRole.User}">
                    <Setter TargetName="Bubble" Property="Background" Value="#2D6CDF"/>
                    <Setter TargetName="RoleText" Property="Text" Value="You"/>
                    <Setter TargetName="RoleText" Property="Foreground" Value="#DDE9FF"/>
                    <Setter TargetName="Bubble" Property="HorizontalAlignment" Value="Right"/>
                    <Setter TargetName="Bubble" Property="Margin" Value="60,0,0,10"/>
                    <Setter TargetName="Bubble" Property="BorderThickness" Value="0"/>
                    <Setter Property="TextBlock.Foreground" Value="White"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- TabItem header styling (simple modern look) -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="#1E2A36"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="14"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: TabControl (PDF / Word / Web) -->
        <Border Grid.Column="0"
                CornerRadius="14"
                BorderBrush="#E2E6EA"
                BorderThickness="1"
                Background="White"
                Padding="12">

            <TabControl x:Name="SourceTabs">
                <!-- ===================== PDF TAB ===================== -->
                <TabItem Header="PDF">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="PDF"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#1E2A36"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Button Content="Browse PDF"
                                    Command="{Binding BrowsePdfCommand}"
                                    Padding="14,9"
                                    Background="#2D6CDF"
                                    Foreground="White"
                                    BorderBrush="#2D6CDF"/>

                            <Button Content="Clear Chat"
                                    Command="{Binding NewChatCommand}"
                                    Margin="10,0,0,0"
                                    Padding="14,9"
                                    Background="#EEF2F7"
                                    Foreground="#1E2A36"
                                    BorderBrush="#DEE6F0"/>
                        </StackPanel>

                        <!-- Selected PDF -->
                        <Border Grid.Row="4"
                                Background="#F7F9FC"
                                BorderBrush="#E2E6EA"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="10">
                            <StackPanel>
                                <TextBlock Text="Selected file" FontSize="12" Foreground="#6B7A8A"/>
                                <TextBlock Text="{Binding SelectedPdfPath}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#1E2A36"
                                           Margin="0,4,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- PDF Viewer -->
                        <Border Grid.Row="6"
                                CornerRadius="12"
                                BorderBrush="#E2E6EA"
                                BorderThickness="1"
                                Background="White"
                                ClipToBounds="True">
                            <wv2:WebView2 x:Name="PdfViewer"/>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- ===================== WORD TAB ===================== -->
                <TabItem Header="Word">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Word (.docx)"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#1E2A36"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Button Content="Browse Word"
                                    Command="{Binding BrowseWordCommand}"
                                    Padding="14,9"
                                    Background="#2D6CDF"
                                    Foreground="White"
                                    BorderBrush="#2D6CDF"/>

                            <Button Content="Clear Chat"
                                    Command="{Binding NewChatCommand}"
                                    Margin="10,0,0,0"
                                    Padding="14,9"
                                    Background="#EEF2F7"
                                    Foreground="#1E2A36"
                                    BorderBrush="#DEE6F0"/>
                        </StackPanel>

                        <!-- Selected Word -->
                        <Border Grid.Row="4"
                                Background="#F7F9FC"
                                BorderBrush="#E2E6EA"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="10">
                            <StackPanel>
                                <TextBlock Text="Selected document" FontSize="12" Foreground="#6B7A8A"/>
                                <TextBlock Text="{Binding SelectedWordPath}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#1E2A36"
                                           Margin="0,4,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- Word Preview placeholder (optional)
                             You can later add a simple text preview here. -->
                        <Border Grid.Row="6"
                                CornerRadius="12"
                                BorderBrush="#E2E6EA"
                                BorderThickness="1"
                                Background="#FFFFFF"
                                Padding="10">
                            <TextBlock Text="(Optional) Add a Word preview here later."
                                       Foreground="#6B7A8A"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- ===================== WEB TAB ===================== -->
                <TabItem Header="Web">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="6"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Website"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#1E2A36"/>

                        <TextBox Grid.Row="2"
                                 Text="{Binding WebsiteUrl, UpdateSourceTrigger=PropertyChanged}"
                                 Height="38"
                                 Padding="10"
                                 Background="#F7F9FC"
                                 BorderBrush="#D7DEE8"
                                 BorderThickness="1"
                                 VerticalContentAlignment="Center"/>

                        <TextBlock Grid.Row="4"
                                   Text="Example: https://example.com/article"
                                   FontSize="11"
                                   Foreground="#6B7A8A"/>

                        <StackPanel Grid.Row="6" Orientation="Horizontal" VerticalAlignment="Top">
                            <Button Content="Load Website"
                                    Command="{Binding LoadWebsiteCommand}"
                                    Padding="14,9"
                                    Background="#2D6CDF"
                                    Foreground="White"
                                    BorderBrush="#2D6CDF"/>

                            <Button Content="Clear Chat"
                                    Command="{Binding NewChatCommand}"
                                    Margin="10,0,0,0"
                                    Padding="14,9"
                                    Background="#EEF2F7"
                                    Foreground="#1E2A36"
                                    BorderBrush="#DEE6F0"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>

        <!-- RIGHT CHAT PANEL -->
        <Border Grid.Column="2" CornerRadius="14" BorderBrush="#E2E6EA" BorderThickness="1" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="64"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" BorderBrush="#EDEFF3" BorderThickness="0,0,0,1" Padding="16,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Chat with your documents" FontSize="16" FontWeight="Bold" Foreground="#1E2A36"/>
                            <TextBlock Text="PDF • Word • Website" FontSize="12" Foreground="#6B7A8A"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="New Chat"
                                Command="{Binding NewChatCommand}"
                                Background="#EEF2F7"
                                Foreground="#1E2A36"
                                BorderBrush="#DEE6F0"
                                Padding="14,9"/>
                    </Grid>
                </Border>

                <!-- Messages -->
                <ScrollViewer x:Name="ChatScroll"
                              Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Padding="14">
                    <ItemsControl x:Name="ChatItems" ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Input -->
                <Border Grid.Row="2" BorderBrush="#EDEFF3" BorderThickness="0,1,0,0" Padding="14">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="ChatInputBox"
                                 Text="{Binding CurrentInput, UpdateSourceTrigger=PropertyChanged}"
                                 MinHeight="44"
                                 Padding="12,10"
                                 Background="#F7F9FC"
                                 BorderBrush="#D7DEE8"
                                 BorderThickness="1"
                                 VerticalContentAlignment="Center"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 KeyDown="ChatInput_KeyDown"/>

                        <Button Grid.Column="2"
                                Content="Send"
                                Command="{Binding SendCommand}"
                                MinHeight="44"
                                Padding="18,9"
                                Background="#2D6CDF"
                                Foreground="White"
                                BorderBrush="#2D6CDF"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

    </Grid>
</Window>
